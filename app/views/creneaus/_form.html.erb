<%= form_for @creneau do |f| %>

  <% if @creneau.errors.any? %>
    <div id="error_explanation">
      <h2>
        Impossible d'enregistrer le cr√©neau :
      </h2>
      <ul>
        <% @creneau.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :nom %><br/>
    <%= f.text_field :nom %>
  </p>
  
  <p>
    <%= f.label :jour %><br>
    <%= f.collection_select :jour_id, Jour.order(:date), :id, :date %>
  </p>

  <p>
    TODO : Refaire ce champ <br/>
    <%= f.label :pap %><br>
    <%= f.collection_select :pap_id, Pap.order(:reponse), :id, :reponse %>
  </p>

  <p>
    <%= f.label :genre %><br/>
    <%= f.select :genre, ['Affichage', 'Prevente', 'Commando'] %>
  </p>

  <p>
    <%= f.label :distance %><br/>
    <%= f.text_field :distance %>
  </p>
  
  <p>
    <%= f.label :adresse%><br/>
    <%= f.text_field :adresse %>
  </p>
  
  <p>
    <%= f.label :commentaires%><br/>
    <%= f.text_field :commentaires %>
  </p>
  
  <p>
    <%= f.submit  class: 'button submit-button radius'%>
  </p>
<% end %> 

<%= link_to 'Retour', jour_path(@creneau.jour) %>
