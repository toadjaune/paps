<h1 class="titre">Liste des Utilisateurs</h1>


<table class="table table-striped table-responsive">
  <tr>
    <th>Nom</th>
    <th>Bar</th>
    <th></th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user %></td>
      <td><%= link_to user.bar unless user.bar.blank? %></td>
      <td><%= link_to 'Supprimer', user_path(user),
                    method: :delete,
                    data: { confirm: 'Voulez-vous vraiment supprimer ce n1A ?' } %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'Retour', root_url %><br/>
