<div class="jumbotron">
	<h2 class="col-sm-offset-1 col-sm-10 titre">Connexion</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	<div class="form-horizontal">
  <div class="form-group">
	  <%= f.label :email, 'Email Supélec', :class=>"control-label col-sm-2" %>
	 <div class="col-sm-7">
		 <%= f.email_field :email, autofocus: true, placeholder:"prenom.nom@supelec.fr", :class=>"form-control" %>
  </div>
  </div>

  <div class="form-group">
	  <%= f.label :password, 'Mot de passe', :class=>"control-label col-sm-2" %>
	 <div class="col-sm-7">
		 <%= f.password_field :password, autocomplete: "off", :class=>"form-control" %>
  </div>
  </div>

  <% if devise_mapping.rememberable? -%>
	  <div class="form-group">
		  <div class="col-sm-offset-2 col-sm-7">
			  <div class="checkbox">
	<label><%= f.check_box :remember_me%>Rester connecté</label>
	    <!--%= f.label :remember_me, 'Rester connecté' %-->
    </div>
    </div>
    </div>
  <% end -%>

  <div class="actions col-sm-offset-7 col-sm-3">
    <%= f.submit "Se connecter", class: 'btn btn-primary' %>
  </div>
</div>
<% end %>
</div> 
<%= render "devise/shared/links" %>
