<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	<div class="alert alert-warning">
	<%= devise_error_messages! %>
</div>
<div class="jumbotron">
<fieldset>
 <legend class="transparent"><h2>S'inscrire</h2></legend>

 <div class="form form-horizontal">
 <div class="form-group">
	 <%= f.label :email, :class=>"control-label col-sm-2" %>
	 <div class="col-sm-7">
	 <%= f.text_field :email, autofocus: true, placeholder:"prenom.nom@supelec.fr", :class=>"form-control" %>
</div>
</div>

<div class="form-group">
	<%= f.label :bar, :class=>"control-label col-sm-2" %>
<div class="col-sm-7">
	<%= f.collection_select :bar_id, Bar.order(:name), :id, :name, :class=>"form-control col-sm-7" %>
</div>
</div>

<div class="form-group">
	<%= f.label :password, 'Mot de passe', :class=>"control-label col-sm-2" %>
 <% if @minimum_password_length %>
 <% end %>
<div class="col-sm-7">
 <%= f.password_field :password, autocomplete: "off", :class=>"form-control col-sm-2" %>
 <span class="help-block">(<%= @minimum_password_length %> caractÃ¨res minimum)</span>
</div>
</div>

<div class="form-group">
	<%= f.label :password_confirmation, 'Confirmation', :class=>"control-label col-sm-2" %>
<div class="col-sm-7">
	<%= f.password_field :password_confirmation, autocomplete: "off", :class=>"form-control" %>
</div>
</div>
</div>
<div class="actions">
	<%= f.submit "S'inscrire",  :class=>"btn btn-primary col-sm-2 col-sm-offset-7" %>
</div>
</fieldset>
</div>
<% end %>

<%= render "devise/shared/links" %>
