      <tr>
        <td><%= creneau %></td>
        <td><%= creneau.jour %></td>
        <td><%= creneau.genre %></td>
        <td><%= creneau.distance %></td>
        <td><%= creneau.adresse %></td>
        <td><%= creneau.commentaires %></td>
      </tr>
    <% end %>
  <% end %>
</table>
